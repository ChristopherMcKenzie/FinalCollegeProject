<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Name: "
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/exercisename_edit_text_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter in the exercise name"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Sets: "
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/exercisesets_edit_text_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter amount of sets"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Reps: "
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/exercisereps_edit_text_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter in amount of reps"/>
    </LinearLayout>
</LinearLayout>