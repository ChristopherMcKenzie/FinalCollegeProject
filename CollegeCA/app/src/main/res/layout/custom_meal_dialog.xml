<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Name: "
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/meal_edit_text_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_meal_hint"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Lunch: "
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/meal_edit_text_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_meal_hint"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Dinner: "
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/meal_edit_text_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_meal_hint"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Supper: "
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/meal_edit_text_supper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_meal_hint"/>
    </LinearLayout>

</LinearLayout>